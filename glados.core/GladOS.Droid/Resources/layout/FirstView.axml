<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <Button
            android:text="HOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            local:MvxBind="Click HomePressed" />
        <Button
            android:text="Schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            local:MvxBind="Click SchedulePressed" />
        <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            local:MvxBind="Click SearchPressed" />
        <Button
            android:text="Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            local:MvxBind="Click ProfilePressed" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.3">
        <ImageView
            android:src="@drawable/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="20px"
            local:MvxBind="Click Calendar" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:minWidth="25px"
        android:minHeight="25px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            local:MvxBind="Text Update" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.9"
        android:minWidth="25px"
        android:minHeight="25px">
        <ImageButton
            android:src="@drawable/meeting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            local:MvxBind="Click InAMeetingPressed" />
        <ImageButton
            android:src="@drawable/office"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            local:MvxBind="Click OfficeHoursPressed" />
        <ImageButton
            android:src="@drawable/busy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            local:MvxBind="Click BusyPressed" />
        <ImageButton
            android:src="@drawable/available"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            local:MvxBind="Click FreeTimePressed" />
    </LinearLayout>
</LinearLayout>