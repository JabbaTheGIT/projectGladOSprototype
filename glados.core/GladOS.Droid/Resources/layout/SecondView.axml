<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px">
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
    <Button
        android:text="HOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        local:MvxBind="Click HomePressed" />
    <Button
        android:text="Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        local:MvxBind="Click SchedulePressed" />
    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        local:MvxBind="Click SearchPressed" />
    <Button
        android:text="Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        local:MvxBind="Click ProfilePressed" />
  </LinearLayout>
  <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="555.0dp"
        android:id="@+id/gridLayout1"
        android:layout_marginBottom="0.0dp">
    <ImageView
        android:src="@drawable/steve"
        android:id="@+id/imageViewDP"
        android:scaleType="centerCrop"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_margin="5dp"
        android:layout_rowSpan="2"
        android:clickable="true" />
    <EditText
        android:id="@+id/editTextName"
        android:background="@android:color/darker_gray"
        android:text="Enter Name"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_height="30dp"
        android:layout_width="260dp"
        android:layout_margin="10dp"
        android:layout_columnSpan="2" />
    <EditText
        android:id="@+id/editTextEmployer"
        android:text="Enter Employer"
        android:background="@android:color/darker_gray"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_height="30dp"
        android:layout_width="260dp"
        android:layout_margin="10dp"
        android:layout_columnSpan="2" />
    <TextView
        android:text="Email : "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewEmail"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_margin="10dp" />
    <EditText
        android:id="@+id/editTextEmail"
        android:text="Enter Email"
        android:background="@android:color/darker_gray"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_height="30dp"
        android:layout_width="260dp"
        android:layout_margin="10dp"
        android:layout_columnSpan="2" />
    <ImageView
        android:id="@+id/imageViewFbIcon"
        android:src="@drawable/facebook_icon"
        android:scaleType="centerCrop"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="30dp"
        android:clickable="true" />
    <ImageView
        android:id="@+id/imageViewLinkedIcon"
        android:src="@drawable/linkedin_icon"
        android:scaleType="centerCrop"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="30dp"
        android:clickable="true" />
    <ImageView
        android:id="@+id/imageViewGitIcon"
        android:src="@drawable/Github_icon"
        android:scaleType="centerCrop"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="30dp"
        android:clickable="true" />
    <ImageView
        android:id="@+id/imageViewSchedule"
        android:src="@drawable/Schedule"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_height="100dp"
        android:layout_width="360dp"
        android:layout_margin="10dp"
        android:clickable="true" />
    <TextView
        android:id="@+id/textViewPhone"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone:"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_margin="10dp" />
    <EditText
        android:id="@+id/editTextPhone"
        android:background="@android:color/darker_gray"
        android:text="Enter Phone Number"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_height="30dp"
        android:layout_width="260dp"
        android:layout_margin="10dp"
        android:layout_columnSpan="2" />
    <TextView
        android:id="@+id/textViewLocate"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Locate Me Using :"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:layout_columnSpan="2" />
    <CheckBox
        android:text="NFC"
        android:id="@+id/checkBoxNFC"
        android:layout_column="0"
        android:layout_row="7"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp" />
    <CheckBox
        android:text="Wifi"
        android:id="@+id/checkBoxWifi"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_marginTop="5dp" />
    <CheckBox
        android:text="GPS"
        android:id="@+id/checkBoxGPS"
        android:layout_column="0"
        android:layout_row="8"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
    <CheckBox
        android:text="Bluetooth"
        android:id="@+id/checkBoxBluetooth"
        android:layout_column="1"
        android:layout_row="8"
        android:layout_marginTop="5dp" />
    <Button
        android:text="Save"
        android:id="@+id/buttonSave"
        android:layout_column="2"
        android:layout_row="7"
        android:layout_margin="5dp"
        android:clickable="true"
        android:layout_rowSpan="2"
        android:layout_marginTop="20dp" />
  </GridLayout>
</LinearLayout>